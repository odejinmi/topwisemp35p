<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homescreen"
        android:padding="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="16sp"
                    android:layout_height="16sp"
                    android:layout_marginEnd="20sp"
                    android:src="@drawable/arrow_left" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash Withdrawal" />
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/linearLayout9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20sp"
                        android:background="@color/white"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="10sp"
                        android:paddingBottom="10sp">

                        <TextView
                            android:id="@+id/textView30"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Amount"
                            android:textAppearance="@style/deposit" />

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="#20,000.00" />


                        <TextView
                            android:id="@+id/cardMaskedPan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_weight="1"
                            android:text="5399 3 **** **** 4102"/>

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_weight="1"
                            android:text="TOBY-NFC 1"
                            android:textColor="#854FFF"
                            android:visibility="gone" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:gravity="center"
                        android:text="Enter your PIN" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:background="@drawable/rounded_border_purple"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/digit1"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/primarycolor"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:background="@drawable/rounded_border_purple"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/digit2"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/primarycolor"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:background="@drawable/rounded_border_purple"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/digit3"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/primarycolor"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="30sp"
                            android:layout_height="30sp"
                            android:layout_marginStart="5sp"
                            android:layout_marginEnd="5sp"
                            android:background="@drawable/rounded_border_purple"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/digit4"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:background="@drawable/circle"
                                android:backgroundTint="@color/primarycolor"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


